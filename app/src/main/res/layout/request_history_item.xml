<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_card"
            style="@style/FragmentMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="1234 5678"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/item_country"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_card"
            android:layout_alignTop="@id/item_card"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:text="Denmark "
            android:textAppearance="@style/TextBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_bank"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_card"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="30dp"
            android:text="Jyske Bank, HjÃ¸rring "
            android:textAppearance="@style/TextBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:paddingBottom="30dp"
            android:text="11.12 23:23" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>